{
  "name": "three-first-person-controller",
  "version": "0.1.1",
  "description": "Lightweight first-person controller for Three.js scenes with pointer lock controls and smooth movement.",
  "author": {
    "name": "Andre Glegg"
  },
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "vite",
    "demo:build": "vite build",
    "demo:preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint \"src/**/*.{ts,tsx}\" \"demo/**/*.{ts,tsx}\" --max-warnings=0",
    "format": "prettier --write .",
    "setup:hooks": "husky install",
    "release": "standard-version",
    "prepare": "npm run build"
  },
  "keywords": [
    "three",
    "threejs",
    "first-person",
    "controller",
    "pointer-lock"
  ],
  "peerDependencies": {
    "three": ">=0.150.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^20.14.10",
    "@types/three": "^0.164.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "prettier": "^3.6.2",
    "standard-version": "^9.5.0",
    "three": "^0.164.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.47.0",
    "vite": "^7.2.2",
    "vitest": "^4.0.10"
  }
}
